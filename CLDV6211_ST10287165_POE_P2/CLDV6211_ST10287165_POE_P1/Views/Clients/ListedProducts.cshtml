@model IEnumerable<CLDV6211_ST10287165_POE_P1.Models.Product>
@{
    ViewData["Title"] = "Listed Products";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listed Products - KhumaloCraft Emporium</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        .container {
            padding: 20px;
        }

        .header {
            background-color: #283593;
            color: #fff;
            padding: 10px 20px;
            text-align: left;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            max-width: 1200px;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-start;
            gap: 10px;
        }

            .search-bar input {
                border-radius: 4px;
                border: 1px solid #ccc;
                padding: 10px;
                transition: box-shadow 0.3s ease-in-out;
            }

                .search-bar input:focus {
                    box-shadow: 0 0 10px #283593;
                    outline: none;
                }

            .search-bar button {
                background-color: #283593;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                cursor: pointer;
            }

                .search-bar button:hover {
                    background-color: #1e3a5f;
                }

        .table {
            width: 100%;
            max-width: 1200px;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #283593;
                color: #fff;
                white-space: nowrap;
            }

            .table td {
                white-space: nowrap;
            }

            .table tr:hover {
                background-color: #f5f5f5;
            }

        .product-image {
            width: 100px;
            height: auto;
        }

        .truncate {
            max-width: 150px; /* Adjust the width as needed */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Listed Products</div>
        <div class="search-bar">
            <input type="text" id="searchProductName" class="form-control" placeholder="Search by product name" onkeyup="filterProducts()">
        </div>
        <table class="table" id="productsTable">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity Available</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td><img src="@product.ImageUrl" alt="@product.Name" class="product-image"></td>
                        <td class="truncate">@product.Name</td>
                        <td>@product.Category.Name</td>
                        <td>@product.Quantity</td>
                        <td>R @product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterProducts() {
            const searchProductName = document.getElementById('searchProductName').value.toLowerCase();
            const table = document.getElementById('productsTable');
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const row = rows[i];
                const productNameCell = row.getElementsByTagName('td')[1];
                const productName = productNameCell.textContent || productNameCell.innerText;

                if (productName.toLowerCase().includes(searchProductName)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        }
    </script>
</body>
</html>
