@model IEnumerable<CLDV6211_ST10287165_POE_P1.Models.Order>

@{
    ViewData["Title"] = "View Client Orders";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<h2>Client Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a asp-action="EditOrder" asp-route-id="@order.OrderId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
