@model CLDV6211_ST10287165_POE_P1.Models.Admin

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #fff;
            color: #333;
        }

        .header {
            background-color: #283593;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
            font-size: 24px;
        }

        .container {
            width: 70%;
            margin: 20px auto;
            background-color: #f9f9f9;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            border: none;
        }

            .btn-primary:hover {
                background-color: #45a049;
            }

        .btn-danger {
            background-color: #f44336;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            border: none;
        }

            .btn-danger:hover {
                background-color: #d32f2f;
            }

        .back-to-list {
            margin-top: 20px;
        }

        .footer {
            text-align: center;
            padding: 10px 20px;
            background-color: #283593;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="header">Delete</div>

    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Admin</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AdminEmail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AdminEmail)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AdminPasswordHash)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AdminPasswordHash)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AdminID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>

    <div class="footer">Thank you for managing KhumaloCraft Emporium!</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
