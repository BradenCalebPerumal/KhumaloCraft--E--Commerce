@model IEnumerable<CLDV6211_ST10287165_POE_P1.Models.OrderDetail>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Orders - KhumaloCraft Emporium</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        .container {
            padding: 20px;
        }

        .header {
            background-color: #283593;
            color: #fff;
            padding: 10px 20px;
            text-align: left;
            font-size: 24px;
            font-weight: bold;
            border-radius: 8px 8px 0 0;
            margin-bottom: 20px;
        }

        .content-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 0 0 8px 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .table th, .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #283593;
                color: #fff;
            }

            .table tr:hover {
                background-color: #f5f5f5;
            }

        .no-orders {
            color: #d9534f;
            font-weight: bold;
            margin-top: 20px;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-start;
            gap: 10px;
        }

            .search-bar input {
                border-radius: 4px;
                border: 1px solid #ccc;
                padding: 10px;
                transition: box-shadow 0.3s ease-in-out;
            }

                .search-bar input:focus {
                    box-shadow: 0 0 10px #283593;
                    outline: none;
                }

            .search-bar button {
                background-color: #283593;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                cursor: pointer;
            }

                .search-bar button:hover {
                    background-color: #1e3a5f;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Your Orders</div>
        <div class="search-bar">
            <input type="text" id="searchOrderId" class="form-control" placeholder="Search by Order ID" onkeyup="filterOrders()">
        </div>
        <div class="content-container">
            @if (Model.Any())
            {
                <table class="table table-bordered table-striped" id="ordersTable">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Order Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderDetail in Model)
                        {
                            <tr>
                                <td>@orderDetail.OrderId</td>
                                <td>@orderDetail.Product.Name</td>
                                <td>@orderDetail.Quantity</td>
                                <td>R @orderDetail.Price?.ToString("N2")</td>
                                <td>@orderDetail.Order.OrderDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="no-orders">No orders found for your products.</p>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterOrders() {
            const searchOrderId = document.getElementById('searchOrderId').value.toLowerCase();
            const table = document.getElementById('ordersTable');
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const row = rows[i];
                const orderIdCell = row.getElementsByTagName('td')[0];
                const orderId = orderIdCell.textContent || orderIdCell.innerText;

                if (orderId.toLowerCase().includes(searchOrderId)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        }
    </script>
</body>
</html>
