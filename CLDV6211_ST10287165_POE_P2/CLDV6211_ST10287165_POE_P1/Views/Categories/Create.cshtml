@model CLDV6211_ST10287165_POE_P1.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Category - KhumaloCraft Emporium</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        .container {
            padding: 20px;
        }

        .header {
            background-color: #283593;
            color: #fff;
            padding: 10px 20px;
            text-align: left;
            font-size: 24px;
            font-weight: bold;
            border-radius: 8px 8px 0 0;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 0 0 8px 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group input {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .btn-primary {
            background-color: #283593;
            border-color: #283593;
            color: #fff;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 16px;
        }

            .btn-primary:hover {
                background-color: #1e2f5a;
                border-color: #1e2f5a;
            }

        .back-to-list a {
            color: #283593;
            text-decoration: none;
            font-weight: bold;
        }

            .back-to-list a:hover {
                color: #1e2f5a;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Create Category</div>
        <div class="form-container">
            <h4>Category</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Create" method="post" onsubmit="transformToUpperCase()">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Category Name</label>
                            <input asp-for="Name" class="form-control" id="categoryName" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="back-to-list mt-3">
            <a asp-action="Index">View all categories</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script>
        function transformToUpperCase() {
            var input = document.getElementById('categoryName');
            input.value = input.value.toUpperCase();
        }
    </script>
</body>
</html>
