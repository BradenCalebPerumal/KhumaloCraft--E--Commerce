@model CLDV6211_ST10287165_POE_P1.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Details - KhumaloCraft Emporium</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        .container {
            padding: 20px;
        }

        .header {
            background-color: #283593;
            color: #fff;
            padding: 10px 20px;
            text-align: left;
            font-size: 24px;
            font-weight: bold;
            border-radius: 8px 8px 0 0;
        }

        .content-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 0 0 8px 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .content-container h4 {
                font-size: 1.5em;
                font-weight: bold;
            }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
            color: #fff;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 16px;
            margin-right: 10px;
        }

            .btn-primary:hover {
                background-color: #45a049;
                border-color: #45a049;
            }

        .btn-secondary {
            background-color: #5bc0de;
            border-color: #46b8da;
            color: #fff;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 16px;
        }

            .btn-secondary:hover {
                background-color: #31b0d5;
                border-color: #269abc;
            }

        .back-to-list a {
            color: #283593;
            text-decoration: none;
            font-weight: bold;
        }

            .back-to-list a:hover {
                color: #1e2f5a;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Category Details</div>
        <div class="content-container">
            <h4>Category</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
</body>
</html>
