@model IEnumerable<CLDV6211_ST10287165_POE_P1.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Orders - KhumaloCraft Emporium</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/modal.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        .container {
            padding: 20px;
        }

        .main-content {
            padding-bottom: 20px;
        }

        .table {
            width: 100%;
            max-width: 1200px;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #283593;
                color: #fff;
                white-space: nowrap;
            }

            .table td {
                white-space: nowrap;
            }

            .table tr:hover {
                background-color: #f5f5f5;
            }

        .btn-primary {
            background-color: #283593;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 4px;
            display: inline-block;
            margin: 5px;
        }

            .btn-primary:hover {
                background-color: #1e3a5f;
            }

        .form-inline {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .form-inline select, .form-inline button {
                margin-left: 10px;
            }

        .header {
            background-color: #283593;
            color: #fff;
            padding: 10px 20px;
            text-align: left;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            max-width: 1200px;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-start;
            gap: 10px;
        }

            .search-bar input {
                border-radius: 4px;
                border: 1px solid #ccc;
                padding: 10px;
                transition: box-shadow 0.3s ease-in-out;
            }

                .search-bar input:focus {
                    box-shadow: 0 0 10px #283593;
                    outline: none;
                }

            .search-bar button {
                background-color: #283593;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                cursor: pointer;
            }

                .search-bar button:hover {
                    background-color: #1e3a5f;
                }

        .action-button {
            padding: 0.375rem 0.75rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            font-size: 1rem;
            width: auto;
            display: inline-flex;
            justify-content: center;
            align-items: center;
        }

        .form-control {
            height: calc(1.5em + 0.75rem + 2px);
        }

        #orderDetailsModal .modal-dialog {
            max-width: 95%; /* Adjusted for larger content */
        }

        #orderDetailsModal .modal-content {
            min-height: 500px; /* Ensures modal is sufficiently tall */
        }

        #orderDetailsModal .modal-table {
            width: 100%;
            border-collapse: collapse;
        }

            #orderDetailsModal .modal-table th, #orderDetailsModal .modal-table td {
                border: 1px solid #dee2e6;
                padding: 8px;
                text-align: left;
                font-size: 16px;
            }

            #orderDetailsModal .modal-table th {
                background-color: #f8f9fa;
                color: #333;
            }

            #orderDetailsModal .modal-table tbody tr:hover {
                background-color: #f1f1f1;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-content">
            <div class="header">All Orders</div>
            <div class="search-bar">
                <input type="text" id="searchOrderId" class="form-control" placeholder="Search by Order ID" onkeyup="filterOrders()">
            </div>
            <table class="table" id="ordersTable">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Email</th>
                        <th>Order Date</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.Customer.CustEmail</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>@order.City, @order.Country</td>
                            <td style="color: @(order.OrderStatus == "Pending" ? "#ffa500" : "#28a745"); font-weight: bold;">@order.OrderStatus</td>
                            <td>
                                <div style="display: flex; gap: 10px; align-items: center;">
                                    <form asp-action="UpdateOrderStatus" method="post" style="display: flex; align-items: center;">
                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                        <select name="newStatus" class="form-control" style="margin-right: 5px;">
                                            <option value="Pending">Pending</option>
                                            <option value="Processed">Processed</option>
                                        </select>
                                        <button type="submit" class="btn btn-primary action-button"><i class="fas fa-sync"></i></button>
                                    </form>
                                    <button type="button" class="btn btn-primary action-button" data-toggle="modal" data-target="#orderDetailsModal" onclick="loadOrderDetails(@order.OrderId)"><i class="fas fa-eye"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Order Details Modal -->
    <div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="orderDetailsContent">
                    <!-- Order details will be dynamically loaded here -->
                    <table class="table modal-table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Content filled by AJAX -->
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterOrders() {
            const searchOrderId = document.getElementById('searchOrderId').value.toLowerCase();
            const table = document.getElementById('ordersTable');
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const row = rows[i];
                const orderIdCell = row.getElementsByTagName('td')[0];
                const orderId = orderIdCell.textContent || orderIdCell.innerText;

                if (orderId.toLowerCase().includes(searchOrderId)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        }

        function loadOrderDetails(orderId) {
            $.get('@Url.Action("GetOrderDetails", "Orders")', { orderId: orderId }, function (data) {
                $('#orderDetailsContent').html(data);
            });
        }
    </script>
</body>
</html>
