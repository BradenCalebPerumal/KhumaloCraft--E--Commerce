@model CLDV6211_ST10287165_POE_P1.Models.Product
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<div class="product-details">
    <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100%; height: auto;" />
    <h3>@Model.Name</h3>
    <p><strong>Price:</strong> R @Model.Price</p>
    <p><strong>Category:</strong> @Model.Category.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity in Stock:</strong> @Model.Quantity</p>
    <form asp-controller="CartItems" asp-action="AddToCart" method="post">
        <input type="hidden" name="productId" value="@Model.Id" />
       
       
    </form>
</div>
